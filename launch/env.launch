<launch>

	<arg name="world_name" default="tristan_maze" />

	<!-- Run gazebo -->
	<include file="$(find policy)/launch/include/gazebo.launch" >
    <arg name="world_name" value="$(find policy)/worlds/$(arg world_name).world" />
	</include>

  <!-- Spawn Jackal -->
	<include file="$(find policy)/worlds/$(arg world_name).launch" />

	<!-- Run RViz -->
  <param name="use_gui" value="true"/>
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find policy)/launch/include/default.rviz" />

  <!-- Run the map server -->
	<arg name="map_file" default="$(find policy)/maps/$(arg world_name)/base.yaml"/>
	<node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!--- Run AMCL -->
	<include file="$(find policy)/launch/include/amcl.launch" />

</launch>
